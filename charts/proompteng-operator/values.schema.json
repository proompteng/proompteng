{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "replicaCount": {
      "type": "integer",
      "minimum": 1
    },
    "image": {
      "type": "object",
      "required": ["repository", "tag", "pullPolicy"],
      "properties": {
        "repository": {
          "type": "string",
          "minLength": 1
        },
        "tag": {
          "type": "string",
          "minLength": 1
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"]
        }
      }
    },
    "rbac": {
      "type": "object",
      "properties": {
        "create": {"type": "boolean"}
      }
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": {"type": "boolean"},
        "name": {"type": "string"},
        "annotations": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "service": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
            },
            "port": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535
            }
          }
        },
        "serviceMonitor": {
          "type": "object",
          "properties": {
            "enabled": {"type": "boolean"},
            "interval": {"type": "string"},
            "scrapeTimeout": {"type": "string"}
          }
        }
      }
    },
    "featureFlags": {
      "type": "object",
      "properties": {
        "enableAgentServices": {"type": "boolean"},
        "enableEvalSuites": {"type": "boolean"}
      }
    },
    "config": {
      "type": "object",
      "properties": {
        "logLevel": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"]
        },
        "defaultNamespace": {
          "type": "string",
          "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        }
      }
    }
  }
}
